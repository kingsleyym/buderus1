{
  "hosting": [
    {
      "target": "main",
      "public": ".",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "newsletter/functions/**",
        "newsletter/firestore.*",
        "newsletter/package*.json",
        "newsletter/README.md",
        "react-app/**"
      ],
      "rewrites": [
        {
          "source": "/q/**",
          "function": "qrRedirect"
        },
        {
          "source": "/team",
          "function": "renderTeamList"
        },
        {
          "source": "/team/**",
          "function": "renderEmployee"
        },
        {
          "source": "/api/vcard/**",
          "function": "generateVCard"
        }
      ]
    },
    {
      "target": "admin",
      "public": "react-app/build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.@(js|css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=31536000"
            }
          ]
        }
      ]
    },
    {
      "target": "employee",
      "public": "react-app/build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "login",
      "public": "react-app/build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "functions": {
    "source": "functions",
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
