rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin Users Collection - Admins können alle User lesen, User können sich selbst lesen
    match /users/{userId} {
      allow read: if request.auth != null && 
        (request.auth.uid == userId || 
         exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow write: if request.auth != null;
    }
    
    // Subscribers Collection - öffentlich lesbar/schreibbar für Newsletter-Funktionen
    match /subscribers/{document} {
      allow read, write: if true;
    }
    
    // Newsletter Campaigns - nur für authentifizierte User
    match /newsletters/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Analytics - nur für authentifizierte User
    match /analytics/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Consent Records - nur für authentifizierte User
    match /consent/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Rewards - öffentlich lesbar/schreibbar für Newsletter-Funktionen
    match /rewards/{document} {
      allow read, write: if true;
    }
    
    // QR-Codes Collection - nur für authentifizierte User (Admin QR-Codes)
    match /qr-codes/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Employee QR-Codes Collection - nur für authentifizierte User
    match /employee_qr_codes/{document} {
      allow read, write: if request.auth != null;
    }
    
    // QR-Analytics Collection - nur für authentifizierte User  
    match /qr-analytics/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Employees Collection - nur für authentifizierte User
    match /employees/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Orders Collection - erlaube schreiben für alle, lesen nur für authentifizierte User
    match /orders/{document} {
      allow write: if true;
      allow read: if request.auth != null;
    }
    
    // Alle anderen Dokumente - blockiert
    match /{document=**} {
      allow read, write: if false;
    }
  }
}