{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "newsletter/functions/**",
      "newsletter/firestore.*",
      "newsletter/package*.json",
      "newsletter/README.md"
    ],
    "rewrites": [
      {
        "source": "/newsletter/**",
        "destination": "/newsletter/index.html"
      }
    ]
  },
  "functions": {
    "source": "newsletter/functions",
    "runtime": "nodejs20",
    "predeploy": [
      "npm --prefix newsletter/functions run build"
    ]
  },
  "firestore": {
    "rules": "newsletter/firestore.rules",
    "indexes": "newsletter/firestore.indexes.json"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}
